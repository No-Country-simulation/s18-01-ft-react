set +e
if [ ! -d "client" ]; then
  echo "Not found client skip commit-msg for client."
  exit 0
fi

if ! git diff --cached --name-only | grep -q '^client/'; then
  echo "No changes in client, skipping commit-msg for client."
  exit 0
fi

cd client

npx --no -- commitlint --edit || { echo -e "$(tput setaf 1)‚ùåThe commit message does not meet the requirements. Look at "commitlint.config.js" file.$(tput sgr0)"; exit 1; }